{
  "name": "eclaireur-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "internals/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "^1.0.28"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.1.1",
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "./dist/**"
        ]
      }
    }
  }
}
